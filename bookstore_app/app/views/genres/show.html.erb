<div class="container">

<h3>Genre Details</h3>
<p>Genre Name: <%= @genre.name %> </p>

<%= form_for :genre, url: genres_path do |f| %>
	
	<div class="form-group">
		<%= f.label :name %><br>
		<%= f.text_field :name, class:'form-control' %><br>
	</div>

	<%= f.submit "Submit", class:'btn btn-primary' %>
		<%=link_to "Cancel", genres_path, class:'btn btn-default' %>
	<% end %>
</div>
