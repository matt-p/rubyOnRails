<div class="container">
	<h2>Add New Novel</h2>
	<%= form_for :novell, url: novells_path do |f| %>
	<div class="form-group">
		<%= f.label :title %><br />
		<%= f.text_field :title, class:'form-control' %><br />
	</div>
	<div class="form-group">
		<%= f.label :isbn %><br />
		<%= f.text_field :isbn, class:'form-control' %><br />
	</div>
	<div class="form-group">
		<%= f.label :format %><br />
		<%= f.text_field :format, class:'form-control' %><br />
	</div>
	<div class="form-group">
		<%= f.label :genre %><br />
		<%= f.select :genre_id, Genre.all.collect {|x| [x.name, x.id]}, {:include_blank => 'Select Genre'},class:'form-control' %><br /><br />
</div>
	<div class="form-group">
		<%= f.label :publisher %><br />
		<%= f.select :publisher_id, Publisher.all.collect {|x| [x.name, x.id]}, {:include_blank => 'Select Genre'},class:'form-control' %><br /><br />
	<div class="form-group">
		<%= f.label :author %><br>
		<%= f.select :author_id, Author.all.collect {|x| [x.fname + ' ' + x.lname, x.id]}, {:include_blank => 'Select Author'},class:'form-control' %><br /><br />
	</div>
	<div class="form-group">
		<%= f.label :price %><br />
		<%= f.text_field :price, class:'form-control' %><br />
	</div>
	<div class="form-group">
		<%= f.label :pages %><br />
		<%= f.text_field :pages, class:'form-control' %><br />
	</div>
	<div class="form-group">
		<%= f.label :publication %><br />
		<%= f.text_field :publication, class:'form-control' %><br />
	</div>
	<div class="form-group">
		<%= f.label :description %><br />
		<%= f.text_field :description, class:'form-control' %><br />
	</div>
	<%= f.submit "Submit", class:'btn btn-primary' %>
		<%=link_to "Cancel", novells_path, class:'btn btn-default' %>
	<% end %>
	</div>
</div>
