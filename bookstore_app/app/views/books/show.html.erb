<div class="container">

<h3>Book Details</h3>
<p>Book Title: <%= @book.title %> </p>

<%= form_for :book, url: books_path do |f| %>
		<div class="form-group">
			<%= f.label :title %>
			<%= f.text_field :title %>
		</div>
		<div class="form-group">
			<%= f.label :price %>
			<%= f.number_field :price %>
		</div>
		<div class="form-group">
			<%= f.label :book_id %>
			<%= f.text_field :book_id %>
		</div>
		<div class="form-group">
			<%= f.label :publisher %>
			<%= f.text_field :publisher %>
		</div>
		<div class="form-group">
			<%= f.label :description %>
			<%= f.text_area :description %>
		</div>
		<div class="form-group">
			<%= f.label :number %>
			<%= f.number_field :number %>
		</div>
		<div class="form-group">
			<%=f.submit %>
		</div>
	<% end %>
</div>
